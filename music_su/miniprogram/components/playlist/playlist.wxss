.playlist-container{
  width: 220rpx;
  position: relative;
  padding-bottom: 20rpx;
}

.playlist-img{
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
  padding-top: 10rpx;
}

.playlist-playCount{
  font-size: 24rpx;
  color: white;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 1);
  position: absolute;
  right: 10rpx;
  top: 14rpx;
  /* padding-left: 26rpx; */
}

.playlist-name {
  font-size: 26rpx;
  line-height: 0;
  padding: 2px 0 0 6px;
}