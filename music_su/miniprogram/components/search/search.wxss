/* components/seach/search.wxss */
.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.search-image {
  width: 40rpx;
  height: 40rpx;
}

.search-bar {
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
  flex: 1;
  margin-left: 20rpx;
}
.search-bar-placeholder {
  color: #999;
}
.search-button {
  background-color: #d43c44;
  color: #fff;
  margin-left: 20rpx;
  font-size: 24rpx;
}